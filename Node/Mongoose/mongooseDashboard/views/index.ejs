<html>
    <head>
        <title>Pandasss</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    </head>
    <body>
        <div class="container">
            <h1>It's raining Pandas!</h1>
            <form action="/panda_maker" method="POST">
                <input type="submit" value="Make new Panda!">
            </form>
            <div class="all-pandas">
                <% for(var i=0;i<pandas.length;i++){ %>
                    <h3>Name: <a href="http://localhost:6789/pandas/<%= pandas[i].id %>"> "<%= pandas[i].name %>"</h3></a> 
                    <h4>weight: <%= pandas[i].weight %> lbs</h4>
                    <form action="/pandas/edit/<%= pandas[i].id %>" method="POST">
                        <input type="submit" value="Edit this Panda">
                    </form>
                    <form action="/pandas/destroy/<%= pandas[i].id %>" method="POST">
                        <input type="submit" value="Destroy Panda, you monster!">
                    </form>
                <% } %>
            </div>
        </div>
    </body>
</html>